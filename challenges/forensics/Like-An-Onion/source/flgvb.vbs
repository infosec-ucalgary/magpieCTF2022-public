Function BytesToString(bytes, charset)
    With CreateObject("ADODB.Stream")
        .Mode = 3
        .Type = 1
        .Open
        .Write bytes
        .Position = 0
        .Type = 2
        .Charset = charset
        BytesToString = .ReadText
    End With
End Function


Function BinaryStringToBytes(binaryStr)
    Dim b, n, i, l

    l = GetLocale
    SetLocale 1031

    With CreateObject("ADODB.Stream")
        .Mode = 3
        .Charset = "Windows-1252"
        .Type = 2
        .Open
        For Each b In Split(binaryStr, " ")
            n = 0
            For i = 0 To 7
                n = n + Mid(b, 8 - i, 1) * 2^i
            Next
            .WriteText Chr(n)
        Next
        .Position = 0
        .Type = 1
        BinaryStringToBytes = .Read
    End With

    SetLocale l
End Function

